
<view class='box'>
    <view class='search'> 
        <input 
            class='input' 
            placeholder='请输入关键字' 
            placeholder-style='input_place' 
            
        ></input>
        <view>
            <button size='mini' class='input_btn' catchtap='searchBtn'>搜索</button>
        </view>
        
    </view>
    <block wx:for="{{list}}" wx:key="index">
        <view class='mark'>
            <button 
                catchtap='clickBtn'
                data-group_id="{{item.group_id}}"
                data-name="{{item.name}}"
                >{{item.name}}</button>
        </view>
    </block>
</view>