<button catchtap='next'>下一点</button>
<button catchtap='end'>结束</button>
<stage
    keyword="木可咖啡"
    mode="{{mode}}"
    height="{{cameraHeight}}"
    list="{{pointList}}"
    dir="{{direction}}"
    z="{{accZ}}"
    next="{{nextStep}}"
    focus="{{focusList}}"
    catch:startNav="startNav"
    catch:openMap="openMap"
    catch:clickOption="clickOption" 
>
</stage>


<!-- <import src="../../templates/map/map.wxml" />
