.footer{
    font-size: 9pt;
    color: #888;
    text-align: center;
    padding: 15px;
}


/******菜单*******/
.menu{
   
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 15px;
    /* width: 100%; */
    background-color: #fff;
    border-top: 1rpx solid #eee; 
    color: #888;
    display: flex ;
    justify-content: space-between;
}



 .discovery {
    display: flex;
    align-items: center;
}
 .discovery image{
    width: 32px; 
    height: 32px;
    border-radius: 50%;
}
.discovery .des{
