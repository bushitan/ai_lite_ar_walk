    position: relative;
    padding: 10px;
    background-color: #fff;
}
.prepare .title{
    font-size: 15pt; 
    font-weight: bolder;
}
.prepare .mark{
    font-size:8pt; 
    margin: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    
    /* flex:1; */
}
.prepare .mark .icon{
    width:16px;
    height: 16px;
    flex: none ;
    margin-right: 3px;
}
.prepare .check{
    padding: 15px;
    width: 42px;
    height: 42px;
    border-radius: 50%;
    background-color: #eee;
}
.prepare .check_photo{
    color: #ffbc34;
    font-size: 9pt;
    padding: 3px 0;
}
.prepare .share{
    position: absolute;
    top: 5px;
    right: 10px;
    /* width: 25px;
    height:25px; */
}

