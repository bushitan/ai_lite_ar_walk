.group {
    margin-top: 10px;
    padding: 10px 0 10px 30px;
    background-color: #fff;
}

.group .mark {
    padding-bottom:15px; 
    font-size: 11pt;
    font-weight: bolder;
    border-bottom: 1rpx solid #e7e7e7;
}

.group .node{
    padding: 0 15px 0 0;
}
.group .border{
    padding:10px 0; 
    display: flex;
    justify-content: space-between;
}
.group .word{    
    width: calc( 750rpx - 45px - 116px - 10px );
}
.group .title{    
    font-size: 11pt;
}
.group .des{    
    margin-top: 5px;
    font-size: 9pt;
    color: #888;
}
.group .cover{
    flex-basis: 116px;
    width: 116px;
    height: 72px;
}

