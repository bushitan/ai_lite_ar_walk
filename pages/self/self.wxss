/* pages/my/my.wxss */
page{
    background-color: #f5f5f5
}
.box{
    padding: 70px 20px ;
}

.search{
    display: flex;
    align-items: center;
}
.search .input{
    background-color: #eee;
    font-size: 9pt;
    padding: 5px 15px;
    width: 60%;
}
.search .input_btn{
    display: flex;
    align-items: center;
    margin-left: 20px;
}

.mark{
    margin-top: 30px;
}



/***swiper***/
.swiper{
    position: relative;
}
.swiper .radius{
    position: absolute;
    bottom:3px;
    /* left: 10%; */
    width: 100%;
    height: 12px;
    background-color: #fff;
    border-radius: 10px 10px 0 0;
}
.swiper image{
    width: 100%;
    /* height: auto; */
}

/***menu***/
.logo{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 5px 15px 10px;
}
.logo .name{    
    display: flex;
    align-items: center;
}
.logo .des {
    font-size: 11pt;
    color: #141414;
    margin-left: 10px;
}
.logo image{
    width:50px;
    height:50px;
    border:1px solid #eee;
    border-radius: 50%;
}
.logo .btn{
    padding: 5px 7px;
    font-size: 9pt;
    background-color: #f67428;
    color: #fff;
    border-radius: 5px;
}


/***menu***/
.menu{
    display: flex;
    justify-content: space-around;
    padding: 10px 0 10px;
}
.menu .icon{
    width:32px;
    height: 32px;
}
.menu .des{
    font-size: 9pt;
    text-align: center;
    color: #888;
}
.menu .select{
    padding: 2px 4px;
    background-color: #eee;
    border-radius: 5px;
    color: #141414;
    /* border-bottom: 1px #fff solid; */
}

/****group**/
.group{    
    background-color: #fff;
}
.group .cover{
    width:100%;
}
.group .title{
    font-size: 13pt;
    color: #000;
    font-weight: bolder;
    text-align: center;
     padding: 5px 0 0;
}
.group .des{
    font-size: 9pt;
    color: #888;
    padding: 5px 15px 15px;
}
.group .btn{
    display: flex;
    justify-content: flex-end;
    padding: 0 15px 10px;
}

.group .address{    
    padding: 5px 7px;
    font-size: 9pt;
    background-color: #c18f50;
    color: #fff;
    border-radius: 5px;
}

.btn_add{
    position:absolute;
    bottom: 15px; 
    right: 15px;
}