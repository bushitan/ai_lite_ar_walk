/* pages/geo/geo.wxss */

/* 搜索 */
page{
    background-color: #fff;
    font-size: 11pt;
}


.tab {
    padding: 10px 15px;
    display: flex;
    align-items: center;
}
.tab .input {
    background-color: #efefef;
    flex-grow: 1;
    padding:5px 10px;
    font-size: 9pt;
    color: #888;
}
.tab .cancel{
    padding-left: 15px;
    color: #1AAD19;
}


.map{
    width: 100vw;
    height: calc( 100vh - 57px );
    /* height: calc( 100vh - 57px - 20px ); */
}

.callout{
    position: absolute;
    top: 10px;
    left: 30px;
    right: 30px;
    padding: 15px;
    background-color: #ffffff;
}
.callout .box{
    display: flex;
    /* justify-content: space-between; */
}
.callout .cover{
    width: 96px;
    height: 64px;
}
.callout .content{
    padding-left:10px 
}
.callout .name {    
    font-size: 11pt;
}
.callout .title{
    font-size: 9pt;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    margin: 3px 0 ;
}
.callout .distance{
    font-size: 9pt;
    color: #888;
}
.callout .tool{
    display: flex;
    /* justify-content: flex-end; */
    margin-top: 5px;
}
.callout .btn{
    font-size: 9pt;
    color: #fff;
    padding: 8px 10px;
    border-radius: 5px;
}
.callout .nav{
    background-color:#ffbc34;
    margin-right: 10px;

}
.callout .collect{
    background-color:yellowgreen;
    margin-right: 10px;
}
.callout .cancle{
    background-color:#eee;
}


.search {
    position: absolute;
    bottom: 10px;
    width: 100%;
    display: flex;
    justify-content: center;
}
.search .btn {
    font-size: 11pt;
    background-color: #ffbc34;
    color: #fff;
    padding: 10px 25px;
    /* padding: 30px; */
    border-radius: 20px;
}



.share {
    position: absolute;
    bottom: 10px;
    right: 10px;
    /* width: 100%; */
    display: flex;
    justify-content: center;
}
.share .btn {
    font-size: 11pt;
    background-color: #ffbc34;
    color: #fff;
    padding: 10px 13px;
    /* padding: 30px; */
    border-radius: 50%;
}

