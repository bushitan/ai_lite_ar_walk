<view class='space'></view>
<view  class="xx_line__gray">
    <mark color="#187bbf" title="请完善店铺内容"></mark>
</view>
<view class='cover'>
    <image src='../../images/group2.jpg' mode="widthFix" wx:if="{{cover_url.length > 0}}"></image>
    <view class='des' hover-class='des_click' wx:else>点击上传封面</view>
</view>
<view class="xx_input ">
    <xx-input name="名称" placeholder="请输入店铺名称" bindinput='inputName' value='{{userInfo.name}}'></xx-input>
        <view class='xx_line__gray'></view> 
    <xx-input name="概述" placeholder="请输入概述" bindinput='inputName' value='{{userInfo.name}}'></xx-input>

    <view class='xx_line__gray'></view>     
    
    <xx-input name="位置"  placeholder="点击右边获取位置" mode="check" 
        bindinput='inputCompanyAddress' value='{{userInfo.company_address}}'
        catch:click='getLocation' btnName="获取位置"
    ></xx-input>

    <view class='xx_line__gray'></view>     
    
    <xx-input name="详情" placeholder="已编字符：{{shop.content.length}}个" mode="content" 
        bindinput='inputCompanyAddress' value='{{userInfo.company_address}}'
        catch:click='toContent' btnName="编辑内容"
    ></xx-input>

</view>
