
.bg{
    width: 100vw;
    height:100vh;
}

.mark{
    position: absolute;
    color: #ffffff;
    background-color: rgba(29, 31, 41, 0.774);
    padding: 5px;
    display: flex;
    align-items: center;
    border-radius: 5px;
    font-size: 9pt;
}

.icon{
    width: 23px;
    height: 23px;
    margin-right:5px; 
}
.title{

    line-height: 15px;
}
.select{
    border:2px solid #ffc834 ;
}

.nav {
    position: absolute;
    bottom:30vh;
    width: 100%;
    display: flex;
    justify-content: center;

}
.nav_icon{
    width: 50px;
    height: 50px;
}

/* 菜单 */
.menu{
    position: absolute;
    left: 0px;
    bottom: 0px;
    height: 52px;
    display: flex;
    align-items: center;
    /* background: linear-gradient(to top, rgba(0, 0, 0, 0.6)  0%, rgba(255, 255, 255, 0) 100%); */
    /* background: url(../../images/menu_bg.png); */
    width: 100%;
    padding: 10px 15px;

}
.menu .menu_bg {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}
.menu .node{
    padding:2px 7px;
    margin: 5px;
    font-size: 9pt;
    color: #fff;
    border: 1px solid #fff;
    border-radius: 5px;
}
.menu .click{
    border:2px solid #ffc834 ;
    color: #ffc834 ;
}
.menu .menu_unpack{
    width: 32px;
    height: 32px;
}

/* 方向 */
.direction{
    position: absolute;
    left: 0px;
    top: 0px;
    width: 100%;
    padding:5px 0 10px ;
    color: #fff;
    font-size: 9pt;
    text-align: center;
}
.direction .direction_center{
    display: flex;
    justify-content: center;

}
.direction .direction_bg {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}
.direction .direction_arrow{
    width:14px;
    height: 14px;
}