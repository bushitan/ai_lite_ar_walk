

<camera device-position="back" flash="off" binderror="error" class="bg">
    <block wx:for="{{markList}}" wx:key="index">
        <cover-view 
            class='mark {{item.id == clickMarkID ? "select":""}}' 
            style='top:{{item.y}}rpx;left:{{item.x}}rpx'
            catchtap='clickMark'
            data-mark_id="{{item.id}}"
        >
            <cover-image class='icon' src='../../images/menu_address.png'></cover-image>
            <cover-view>    
                <cover-view class='title'>{{item.name}}</cover-view>
                <cover-view  class='title'>{{item.distance}}米</cover-view>
                <cover-view  
                    class='title' 
                    bindtap='clickInfo'
                    data-mark_id="{{item.id}}"
                >详情</cover-view>
            </cover-view>
        </cover-view>
    </block>

    <cover-view class='nav'>
         <cover-image class='nav_icon' src='{{navIcon}}'></cover-image>
    </cover-view>

    <cover-view class='menu'>      
        <cover-image class='menu_bg' src='../../images/menu_bg.png'></cover-image>  
        <cover-view class='node click'> <cover-view >景点</cover-view></cover-view>
        <cover-view class='node'><cover-view >厕所</cover-view></cover-view>
    </cover-view>
</camera>